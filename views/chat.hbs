<div class="chat-container">
  <header class="chat-header">
    <h1><i class="fas fa-smile"></i> Chat Room</h1>
    <a href="/" class="btn">離開</a>
  </header>
  <main class="chat-main">
    <div class="chat-sidebar">
      <h3><i class="fas fa-comments"></i> 聊天室</h3>
      <h2 id="room-name"></h2>
      <h3><i class="fas fa-users"></i> 用戶</h3>
      <ul id="users"> </ul>
    </div>
    <div class="chat-messages"> </div>
  </main>
  <div class="chat-form-container">
    <form id="chat-form">
      <input class="rounded border-0" id="msg" type="text" placeholder="請輸入訊息..." required autocomplete="off" />
      <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
    </form>
  </div>
</div>

