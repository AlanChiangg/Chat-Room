<div class="chat-container">
  <header class="chat-header">
    <h1><i class="fa-solid fa-user-astronaut fa-bounce" style="color: #ffffff;"></i> Outer Space</h1>
    <a href="/" class="btn"><i class="fa-solid fa-door-closed"></i> 離開</a>
  </header>
  <main class="chat-main">
    <div class="chat-sidebar">
      <h3><i class="fa-regular fa-comments" style="color: #008fb3;"></i> 星球</h3>
      <h2 id="room-name"> </h2>
      <h3><i class="fa-solid fa-people-group" style="color: #008fb3;"></i> 用戶</h3>
      <ul id="users"> </ul>
    </div>
    <div class="chat-messages"> </div>
  </main>
  <div class="chat-form-container">
    <form id="chat-form">
      <input class="rounded border-0" id="msg" type="text" placeholder="請輸入訊息..." required autocomplete="off" />
      <button class="btn"><i class="fas fa-paper-plane"></i> 送出</button>
    </form>
  </div>
</div>

